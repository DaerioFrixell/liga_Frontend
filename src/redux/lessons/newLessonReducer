const ADD_TITLE = "ADD_TITLE";
const CLEAR_FIELD = "CLEAR_FIELD";

export const newLessonReducer = (state, action) => {
  switch (action.type) {
    case ADD_TITLE: return { ...state, title: action.payload }
    case CLEAR_FIELD:
      return {
        ...state,
        title: "",
      };

    default: return state;
  }
}

